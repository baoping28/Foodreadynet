@model FoodReady.WebUI.Models.GroupCheckoutModel
<script src="@Url.Content("~/Scripts/FRJqueryScripts/groupCheckoutJS.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/FRJqueryScripts/hoverPopupDiv.js")" type="text/javascript"></script>

@if (string.IsNullOrEmpty(ViewBag.ValidateAddress) == false)
{
    <div id="popupbody2">
        <div class="modal-header">
        </div>
        <div class="modal-body">
            @ViewBag.ValidateAddress
        </div>
    </div>
}
else if (ViewBag.ScheduleOK == "OK")
{
    <div id="popupbody2">
        <div class="modal-header" style="color:black;text-align:center;">
            <h2 id="poptitle2" class="modal-title">
                Order Confirmation
            </h2>
        </div>
        <div class="modal-body container">
            @Html.Partial("_GroupConfirmPartial", Model)
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <div id="loading" class="loadCheck">
                        <img id="loader" class="loadCheck" src="@Url.Content("~/Content/Images/ajax-loaderPng4.gif")" />
                    </div>
                    <div style="float:right;">
                        <input id="gogroupcheckout" type="button" value="Place Order" class="btn btn-primary btn-lg" />
                    </div>
                    <div class="clearBoth">
                    </div>
                    <div id="popsuccess" class="hide">
                        @Html.Partial("_GroupSuccessPartial", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>


}
else
{
    <div id="popupbody2">
        <div class="modal-header">
        </div>
        <div class="modal-body">
            The restaurant ( @ViewBag.Restaurant ) is not open at your scheduled time ( @Model.GroupCheckoutCart.PartyScheduleTime ,@Model.GroupCheckoutCart.PartyScheduleDate by @ViewBag.LabelName ). Please schedule for a different time.
            <div class="clearBoth">
            </div>
        </div>
    </div>
}
<br />