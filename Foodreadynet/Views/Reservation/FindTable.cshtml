@model FoodReady.WebUI.Models.RVConfirmationModel
<script src="@Url.Content("~/Scripts/FRJqueryScripts/RemainingCharacterCount.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/FRJqueryScripts/RVValidate.js")" type="text/javascript"></script>
<div id="popupbody1">
    @if (ViewBag.tableAvailable == "y")
    {
        <div class="modal-header">
            <h5 id="poptitle1" class="modal-title" style="color:black;text-align:center;">
                Table is open at @ViewBag.biztitle
                <br />
                @ViewBag.datetime for @Model.RVNum
            </h5>
        </div>
        <div class="modal-body">
            <h3>Email Form <small>complete your reservation</small></h3><hr />
            <div class="row">
                @using (Html.BeginForm("Completed", "Reservation", FormMethod.Post, new { id = "rvform" }))
                {
                    @Html.HiddenFor(e => e.BizInfoId)
                    @Html.HiddenFor(e => e.RVDate)
                    @Html.HiddenFor(e => e.RVTime)
                    @Html.HiddenFor(e => e.RVNum)
                    <div class="col-sm-6 col-md-6" style="border-right:solid 1px #808080;">
                        <div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.FirstName)
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-user"></span>
                                    </span>
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control boxShadow required" })
                                    @Html.ValidationMessageFor(m => m.FirstName)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.LastName)
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-user"></span>
                                    </span>
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control boxShadow required" })
                                    @Html.ValidationMessageFor(m => m.LastName)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Phone)
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-phone"></span>
                                    </span>
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control boxShadow required phoneUS" })
                                    @Html.ValidationMessageFor(m => m.Phone)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email)
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-envelope"></span>
                                    </span>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control boxShadow required" })
                                    @Html.ValidationMessageFor(m => m.Email)
                                </div>
                            </div>
                        </div>

                    </div><div class="col-sm-1 col-md-1"></div>
                    <div class="col-sm-5 col-md-5">
                        <div class="form-group">
                            <div>@Html.LabelFor(m => m.Message)</div> @Html.ValidationMessageFor(m => m.Message)
                            <div class="float-left">
                                @Html.TextAreaFor(m => m.Message, 4, 40, new { title = "Please note that not all requests can be accommodated.", @class = "form-control boxShadow" })
                                <div class="remaining">
                                    Characters remaining: <span class="count">512</span>
                                    <input id="messageClear" type="button" value="Clean Text" class="btn btn-default btn-sm" />
                                </div>
                            </div>
                        </div>
                        <div style="clear: both;">
                        </div><br /><br />
                        <div class="form-group">
                            <button id="reserve" type="submit" class="btn btn-lg btn-primary" title="Confirm reservation">Confirm reservation <span class="glyphicon glyphicon-ok"></span></button>
                        </div>

                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="modal-header">
         
        </div>
    <div class="modal-body">
        <p>No table is available at @ViewBag.biztitle  @ViewBag.datetime for @Model.RVNum </p>
        <p>Please make a reservation for different time.</p>
    </div>
    }
</div>
