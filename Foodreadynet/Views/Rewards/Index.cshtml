@model IEnumerable<FR.Domain.Model.Entities.RewardVoucher>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-full titlepadding">
    <div class="container">
        <div class="row">
            <h1 style="color:#ffffff;">
                Earning your reward points now! <small style="font-size:16px;color:#dddddd;">
                    Earn points every time you place an order online! Points never expire!
                    Your points are earned at the rate of 5 points per dollar  when ordering online.
                    To check your reward points, go to <a href="/Rewards/MyPoints" class="btn btn-success btn-sm">My Reward Points</a>.
                </small>
            </h1>
        </div>
    </div>
</div>
<div class="container toppadding">
    @foreach (var r in Model)
    {
        <div class="col-sm-6 col-md-6 toppadding" style="border-bottom:solid 1px #cccccc;">
            <div class="col-sm-6 col-md-6">
                <img src="@Url.Content("~/Content/images/" + r.ImageUrl)" class="rewardimg img-responsive" /><br /><br />
            </div>
            <div class="col-sm-6 col-md-6">
                <span style="font-size:18px; font-family:Arial; font-weight:normal; color:Maroon;">@r.Title</span><br />
                <span style="color:Navy;">@r.Description</span><br /><br />
                <p>
                    @r.Points Points = @r.Title
                </p>
            </div>
        </div>
    }
</div>