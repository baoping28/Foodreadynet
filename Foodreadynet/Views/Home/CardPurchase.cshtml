@model FoodReady.WebUI.Models.BuyGiftCardModel
@using FR.Infrastructure.Helpers
@{
    ViewBag.Title = "Gift Card Purchase";
}
<script src="@Url.Content("~/Scripts/FRJqueryScripts/hoverPopupDiv.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/FRJqueryScripts/slidingUpDown.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/FRJqueryScripts/RemainingCharacterCount.js")" type="text/javascript"></script>
<div class="container-full titlepadding">
    <div class="container">
        <div class="row">
            <h1 style="color:#ffffff;">
                FoodReady.Net Virtual Gift Card
            </h1>
        </div>
    </div>
</div>
<div class="container toppadding">
    @if ((int)ViewBag.result == 0 || (int)ViewBag.result == 3)
    {
        using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-sm-5 col-md-5" style="border-right:solid 1px #808080;">
                    <h4><b>Gift Information</b></h4>
                    <div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.BuyerEmail)
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-envelope"></span>
                                </span>
                                @Html.TextBoxFor(m => m.BuyerEmail, new { @class = "form-control boxShadow" })
                                @Html.ValidationMessageFor(m => m.BuyerEmail)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Phone)
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-phone"></span>
                                </span>
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control boxShadow" })
                                @Html.ValidationMessageFor(m => m.Phone)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Amount)
                            <div class="input-group">
                                <span class="input-group-addon">$</span>
                                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control boxShadow" })
                                @Html.ValidationMessageFor(m => m.Amount)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.RecipientEmail)
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-envelope"></span>
                                </span>
                                @Html.TextBoxFor(m => m.RecipientEmail, new { @class = "form-control boxShadow" })
                                @Html.ValidationMessageFor(m => m.RecipientEmail)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Re_RecipientEmail)
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-envelope"></span>
                                </span>
                                @Html.TextBoxFor(m => m.Re_RecipientEmail, new { @class = "form-control boxShadow" })
                                @Html.ValidationMessageFor(m => m.Re_RecipientEmail)
                            </div>
                        </div>
                        <div class="=form-group">
                            <div class="checkoutTxtArea">
                                <b>Message to Recipient:</b>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </span>
                                    @Html.TextAreaFor(m => m.Message, 2, 40, new { @class = "form-control boxShadow" })
                                    <div class="remaining float-left">
                                        Characters remaining: <span class="count">512</span>
                                        <input id="btnMsgClear" type="button" value="Clean Text" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-1 col-md-1">
                    &nbsp;
                </div>
                <div class="col-sm-6 col-md-6">
                    <h4><b>Credit Card Payment</b></h4>
                    <div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.BillFirstName) Test
                            @Html.TextBoxFor(m => m.BillFirstName, new { @class = "form-control boxShadow" })
                            @Html.ValidationMessageFor(m => m.BillFirstName)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.BillLastName) user
                            @Html.TextBoxFor(m => m.BillLastName, new { @class = "form-control boxShadow" })
                            @Html.ValidationMessageFor(m => m.BillLastName)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.CardType)
                            @Html.DropDownListFor(x => x.CardType, Helper.CardTypeDropdownData(), "Choose a card type", new { @class = "form-control boxShadow" })
                            @Html.ValidationMessageFor(m => m.CardType)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.CardNumber)
                            4697604089680804<br />
                            @Html.TextBoxFor(m => m.CardNumber, new { @class = "form-control boxShadow" })
                            @Html.ValidationMessageFor(m => m.CardNumber)
                        </div>
                        <div class="form-group">
                            <div class="populink">
                                @Html.LabelFor(m => m.SecurityCode) (CSC?)
                            </div>
                            <div class="popupdiv"> <img title="Continue Checking out" src="@Url.Content("~/Content/Images/CSCImg.png")" /></div>
                            @Html.TextBoxFor(m => m.SecurityCode, new { @class = "form-control boxShadow" }) 666
                            @Html.ValidationMessageFor(m => m.SecurityCode)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ExpirationMonth)
                            @Html.DropDownListFor(x => x.ExpirationMonth, Helper.MonthDropdownData(), "Choose a month", new { @class = "form-control boxShadow" })
                            06
                            @Html.ValidationMessageFor(m => m.ExpirationMonth)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ExpirationYear)
                            @Html.DropDownListFor(x => x.ExpirationYear, Helper.YearDropdownData(), "Choose an year", new { @class = "form-control boxShadow" })
                            2016
                            @Html.ValidationMessageFor(m => m.ExpirationYear)
                        </div>
                    </div>
                </div>
            </div><hr />
            <div class="row">
                <div class="col-sm-offset-6 col-sm-6 col-md-offset-6 col-md-6">
                    <input type="submit" value="Virtual Gift Card Purchase Submit" title="Buy Virtual Gift Card Now" class="btn btn-lg btn-primary" />
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col-sm-12 col-md-12">
                @Html.Partial("_GiftCardSuccessNotice", Model)
            </div>
        </div>
    }
</div>
