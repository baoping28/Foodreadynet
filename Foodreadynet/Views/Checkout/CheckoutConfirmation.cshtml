@model FoodReady.WebUI.Models.CheckoutModel
<script src="@Url.Content("~/Scripts/FRJqueryScripts/CheckoutJS.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/FRJqueryScripts/hoverPopupDiv.js")" type="text/javascript"></script>

@if (string.IsNullOrEmpty(ViewBag.ValidateAddress) == false)
{
    <div id="popupbody2">
        <div class="modal-header">
        </div>
        <div class="modal-body">
            @ViewBag.ValidateAddress
        </div>
    </div>
}
else if (ViewBag.ScheduleOK == "OK")
{
    <div id="popupbody2">
        <div class="modal-header" style="color:white;text-align:center;background-color:#1E7CB8; border-bottom:solid #1E7CB8 1px;">
            <h2 id="poptitle2" class="modal-title">
                Order Confirmation
            </h2>
            ( @Model.BizInfo.BizTitle )
        </div>
        <div class="modal-body container boxShadow"><br />
            @Html.Partial("_ConfirmPartial", Model)
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <div id="loading" class="loadCheck">
                        <img id="loader" class="loadCheck" src="@Url.Content("~/Content/Images/ajax-loaderPng4.gif")" />
                    </div>
                    <div style="float:right;">
                        <input id="gocheckout" type="button" value="Place Order" class="btn btn-primary btn-lg" />
                    </div>
                    <div class="clearBoth">
                    </div>
                    <div id="popsuccess" class="hide">
                        @Html.Partial("_SuccessPartial", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>


}
else
{
    <div id="popupbody2">
        <div class="modal-header">
        </div>
        <div class="modal-body">
            The restaurant is not open at your scheduled time ( @Model.Cart.ScheduleTime ,@Model.Cart.ScheduleDate ). Please schedule for a different time.
            <center> @Html.Partial("_BizHourPartial", Model.BizInfo)</center>
            <div class="clearBoth">
            </div>
        </div>
    </div>
}
<br />