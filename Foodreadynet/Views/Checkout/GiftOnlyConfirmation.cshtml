@model FoodReady.WebUI.Models.CheckoutGiftModel
<script src="@Url.Content("~/Scripts/FRJqueryScripts/checkoutJS.js")" type="text/javascript"></script>
@if (string.IsNullOrEmpty(ViewBag.ValidateAddress) == false)
{
    <div id="popupbody2">
        <div class="modal-header">
        </div>
        <div class="modal-body">
            @ViewBag.ValidateAddress
        </div>
    </div>
}
else if (ViewBag.ScheduleOK == "OK")
{
    <div id="popupbody2">
        <div class="modal-header" style="color:black;text-align:center;">
            <h2 id="poptitle2" class="modal-title">
                Order Confirmation
            </h2>
            ( @Model.GCBizInfo.BizTitle )
        </div>
        <div class="modal-body">
            @Html.Partial("_GiftOnlyConfirmPartial", Model)
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <div id="giftonlyloading" class="loadCheck">
                        <img id="giftonlyloader" class="loadCheck" src="@Url.Content("~/Content/Images/ajax-loaderPng4.gif")" />
                    </div>
                    <div style="float:right;">
                        <input id="giftonlycheckout" type="button" value="Place Order" class="btn btn-primary" />
                    </div>
                    <div class="clearBoth">
                    </div>
                    <div id="giftpopsuccess" class="hide">
                        @Html.Partial("_GiftSuccessPartial", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>


}
else
{
    <div id="popupbody2">
        <div class="modal-header">
        </div>
        <div class="modal-body">
            The restaurant is not open at your scheduled time ( @Model.GCCart.ScheduleTime ,@Model.GCCart.ScheduleDate
            ). Please schedule for a different time.
            <center>
                @Html.Partial("_BizHourPartial", Model.GCBizInfo)
            </center>
            <div class="clearBoth">
            </div>
        </div>
    </div>
}
<br />