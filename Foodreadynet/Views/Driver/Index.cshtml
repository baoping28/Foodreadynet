@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/FRJqueryScripts/driverSignJs.js")" type="text/javascript"></script>

<div class="container-full titlepadding">
    <div class="container">
        <div class="row">
            <h1 style="color:#ffffff;">
                Driver Sign in / Sign out
            </h1>
        </div>
    </div>
</div>
<div class="container toppadding boxShadow">
    <div class="row">
        <div class="col-sm-2 col-md-2">
        </div>
        <div class="col-sm-10 col-md-10">
            <h4 id="msg"></h4>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-user"></span>
                    </span>
                    <input id="drivername" type="text" placeholder="Drive name" class="form-control boxShadow" />
                </div>
            </div><br />

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-lock"></span>
                    </span>
                    <input id="driverpassword" type="password" placeholder="Drive password" class="form-control boxShadow" />
                </div>
            </div><br />
        </div><br />
        <div class="row" style="margin-bottom:40px;padding-left:10px;">
            <div class="col-sm-2 col-md-2">
            </div>
            <div class="col-sm-10 col-md-10">
                <button id="driverin" class="btn btn-primary">Sign in</button> &nbsp; &nbsp;
                <button id="driverout" class="btn btn-primary">Sign out</button>
            </div>
        </div>
        <div class="row" style="margin-bottom:40px;padding-left:10px;">
            <div class="col-sm-2 col-md-2">
            </div>
            <div class="col-sm-10 col-md-10">
                <a href="/Driver/ResetDriverPassword">Change driver password ? Click here.</a>
            </div>
        </div><br />
    </div>
</div>