@model FoodReady.WebUI.Models.UserDetailModel
@{
    ViewBag.Title = "User Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="@Url.Content("~/Scripts/FRAdminScripts/usersJS.js")" type="text/javascript"></script>
<div class="titlebox boxShadow">
    <center><h1>User(@Model.User.UserName) Details</h1></center>
</div>
<div id="detailsBody">
    <div class="container">
        <center><h3><b>User Profile</b></h3></center>
    </div>
    <table class="table table-striped">
        <tr>
            <th>
                User Name
            </th>
            <th>
                User Id:
            </th>
            <th>
                Creation Date:
            </th>
            <th>
                Last Updated Date:
            </th>
            <th>
                Is Active:
            </th>
        </tr>
        <tr>
            <td>
                @Model.User.UserName
            </td>
            <td>
                @Model.User.Id
            </td>
            <td>
                @Model.User.AddedDate
            </td>
            <td>
                @Model.User.UpdatedDate
            </td>
            <td>
                @Model.User.Active.ToString()
            </td>

        </tr>
    </table><hr />
    <div class="container">
        <center><h3><b>User Details</b></h3></center>
    </div>
    @if (Model.Userdetail != null)
    {
        <table class="table table-striped">
            <tr>
                <th>
                    User Detail ID:
                </th>
                <th>
                    First Name:
                </th>
                <th>
                    Last Name:
                </th>
                <th>
                    Address:
                </th>
                <th>
                    User Phone:
                </th>
                <th>
                    User Email:
                </th>
                <th>
                    User Password:
                </th>
                <th>
                    In Role:
                </th>
            </tr>
            <tr>
                <td>
                    @Model.Userdetail.UserDetailId
                </td>
                <td>
                    @Model.Userdetail.FirstName
                </td>
                <td>
                    @Model.Userdetail.LastName
                </td>
                <td>
                    @Html.Raw(Model.Userdetail.Address.TwoLineAddressString)
                </td>
                <td>
                    @Model.Userdetail.ContactInfo.Phone
                </td>
                <td>
                    @Model.Userdetail.ContactInfo.Email
                </td>
                <td>
                    @ViewBag.psw
                </td>
                <td>
                    @ViewBag.Role
                </td>

            </tr>
        </table>
    }<hr />

    <div class="container">
        <center><h3><b>Local Membership</b></h3></center>
    </div>
    @if (Model.UserLogin != null)
    {
        <table class="table table-striped">
            <tr>
                <th>
                    Login Provider:
                </th>
                <th>
                    Provider Key:
                </th>
                <th>
                    User ID:
                </th>
            </tr>
            <tr>
                <td>
                    @Model.UserLogin.LoginProvider)
                </td>
                <td>
                    @Model.UserLogin.ProviderKey
                </td>
                <td>
                    @Model.UserLogin.UserId
                </td>

            </tr>
        </table>
    }<hr />

    <div class="pull-right">
        @Html.ActionLink("Back to Users", "AllUsers", "Admin")
    </div>
</div>

