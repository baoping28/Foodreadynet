@model IEnumerable<FR.Domain.Model.Entities.BizInfo>
<div id="popupbody1">
    <div class="modal-header">
        <h5 id="poptitle" class="modal-title" style="color:black;text-align:center;">Select a restaurant to start</h5>
    </div>
    <div class="modal-body">
        <p>@ViewBag.ValidateAddress</p>
        @foreach (var b in Model)
        {
            <div class="row">
                <div class="col-sm-2 col-md-2">
                    <img src="@Url.Content("~/Content/BizImages/" + b.ImageUrl)" class="bizImg boxShadow boxCorner" />
                </div>
                <div class="col-sm-10 col-md-10">
                    @Html.ActionLink(b.BizTitle, "GoJoin", "Group", new { name = ViewBag.lname, groupid = ViewBag.gid, bizid = b.BizInfoId }, null)<br />
                    @Html.Raw(b.BizTwoLineAddressString)
                </div>
            </div>
        }
    </div>
</div>
