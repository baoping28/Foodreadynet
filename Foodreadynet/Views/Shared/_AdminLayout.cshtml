<!DOCTYPE html>
<html>
<head>
     <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
    @Styles.Render("~/Content/Admincss")
    @Styles.Render("~/Content/themes/base/css")
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jqueryval")
     @Scripts.Render("~/bundles/FRAdminScripts")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="navbar navbar-inverse navbar-custom navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Admin/Index">FOODREADY ADMIN MANAGER</a>
            </div>
            <ul class="nav navbar-nav navbar-right" style="color:white;">
                <li><a href="/Admin/LogOff">( @User.Identity.Name Log Off )</a> </li>
            </ul>
        </div>
    </div>

    <div id="mainMenu" class="container-fluid">
        <div class="row">
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("All Users", "AllUsers", "admin") / @Html.ActionLink("All Users with paging", "AllOfUsers", "admin")
            </div>
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("Create a Restaurant Account", "RegisterBiz", "Admin")
            </div>
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("All Restaurant Users", "AllRestaurantUsers", "Admin")
            </div>
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("Manage Cuisine Types", "ManageCuisineTypes", "Admin")
            </div>
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("Manage Dressings", "ManageDressings", "Admin")
            </div>
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("Manage Food Types", "ManageFoodTypes", "Admin")
            </div>
            </div>
        <div class="row paddingtop">
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("Manage Meal Sections", "ManageMealSections", "Admin")
            </div>
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("Manage Toppings", "ManageToppings", "Admin")
            </div>
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("Manage Cook Methods", "ManageCookMethods", "admin")
            </div>
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("Manage Gift Cards", "ManageGiftCards", "Admin")
            </div>
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("Manage Credit Card Types", "ManageCreditCardTypes", "Admin")
            </div>
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("Manage Orders", "ManageOrders", "Admin")
            </div>
        </div>
        <div class="row paddingtop">
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("Manage Reward Vouchers", "ManageRewardVouchers", "admin")
            </div>
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("Manage Converted Points", "ManageConvertedPoints", "Admin")
            </div>
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("Manage Reservations", "ManageReservations", "Admin")
            </div>
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("Manage Hotel Types", "ManageHotelTypes", "Admin")
            </div>
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("Go to FRManager", "index", "FRManager")
            </div>
            <div class="col-sm-2 col-md-2">
                @Html.ActionLink("Register driver", "RegisterDriver", "Admin")
            </div>
        </div>
        </div>
    <div class="container-fluid" style="padding:20px 20px 50px 20px;">
            <div class=" body-container">
        @if (TempData["message"] != null)
        {
            <div class="Message">@TempData["message"]</div>
        }
        @RenderBody()
    </div>

        </div>

</body>
</html>
