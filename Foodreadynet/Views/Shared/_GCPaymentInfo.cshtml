@model FoodReady.WebUI.Models.CheckoutGiftModel
@using FR.Infrastructure.Helpers
@using FoodReady.WebUI.HtmlHelpers
<script src="@Url.Content("~/Scripts/FRJqueryScripts/hoverPopupDiv.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/FRJqueryScripts/copyAddressJS.js")" type="text/javascript"></script>
<p class="midTitle">
    Credit Card Info
</p>
<div id="GCpaymentInfo">
    <div class="form-group">
        <input name="gcsameAsShipping" id="gcsameAsShipping" type="checkbox" value="gcsameAsShipping" />
        <label for="gcsameAsShipping">
            &nbsp;&nbsp;<b>First Name and Last Name same as above</b>
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GCBillFirstName) Test
        @Html.TextBoxFor(m => m.GCBillFirstName, new { @class = "form-control boxShadow" })
        @Html.ValidationMessageFor(m => m.GCBillFirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GCBillLastName) user
        @Html.TextBoxFor(m => m.GCBillLastName, new { @class = "form-control boxShadow" })
        @Html.ValidationMessageFor(m => m.GCBillLastName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GCCardType)
        @Html.DropDownListFor(x => x.GCCardType, Helper.CardTypeDropdownData(), "Choose a card type", new { @class = "form-control boxShadow" })
        @Html.ValidationMessageFor(m => m.GCCardType)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GCCardNumber)
        4697604089680804<br />
        @Html.TextBoxFor(m => m.GCCardNumber, new { @class = "form-control boxShadow" })
        @Html.ValidationMessageFor(m => m.GCCardNumber)
    </div>
    <div class="form-group">

        <div class="populink">
            @Html.LabelFor(m => m.GCSecurityCode) (CSC?)
        </div>
        <div class="popupdiv"> <img title="Continue Checking out" src="@Url.Content("~/Content/Images/CSCImg.png")" /></div>
        @Html.TextBoxFor(m => m.GCSecurityCode, new { @class = "form-control boxShadow" }) 666
        @Html.ValidationMessageFor(m => m.GCSecurityCode)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GCExpirationMonth)
        @Html.DropDownListFor(x => x.GCExpirationMonth, Helper.MonthDropdownData(), "Choose a month", new { @class = "form-control boxShadow" })
        06
        @Html.ValidationMessageFor(m => m.GCExpirationMonth)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GCExpirationYear)
        @Html.DropDownListFor(x => x.GCExpirationYear, Helper.YearDropdownData(), "Choose an year", new { @class = "form-control boxShadow" })
        2016
        @Html.ValidationMessageFor(m => m.GCExpirationYear)
    </div>
</div><hr />
