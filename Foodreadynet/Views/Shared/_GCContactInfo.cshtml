@model FoodReady.WebUI.Models.CheckoutGiftModel
@using FR.Infrastructure.Helpers
@using FoodReady.WebUI.HtmlHelpers
<p class="midTitle">
    Contact Info
</p>
<div id="GCcontactInfo">
    <div class="form-group">
        @Html.LabelFor(m => m.GCPhone)
        <div class="input-group">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-phone"></span>
            </span>
            @Html.TextBoxFor(m => m.GCPhone, new { @class = "form-control boxShadow" })
            @Html.ValidationMessageFor(m => m.GCPhone)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GCEmail)

        <div class="input-group">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-envelope"></span>
            </span>
            @Html.TextBoxFor(m => m.GCEmail, new { @class = "form-control boxShadow" })
            @Html.ValidationMessageFor(m => m.GCEmail)
        </div>
    </div>
</div><hr />
