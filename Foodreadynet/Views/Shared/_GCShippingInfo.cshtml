@model FoodReady.WebUI.Models.CheckoutGiftModel
@using FR.Infrastructure.Helpers
@using FoodReady.WebUI.HtmlHelpers
<script src="@Url.Content("~/Scripts/FRJqueryScripts/GCCheckoutSlideUpDown.js")" type="text/javascript"></script>
<p class="midTitle">
    Address Info @if (Model.GCCart.IsDelivery)
    {<span>(Deliver to)</span>}
</p>
<div id="GCshippingInfo">
    <div class="form-group">
        @Html.LabelFor(m => m.  GCFirstName)
        @Html.TextBoxFor(m => m.GCFirstName, new { @class = "form-control boxShadow" })
        @Html.ValidationMessageFor(m => m.GCFirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GCLastName)
        @Html.TextBoxFor(m => m.GCLastName, new { @class = "form-control boxShadow" })
        @Html.ValidationMessageFor(m => m.GCLastName)
    </div>
    <div id="gcroomnumer">
        <h5 style="cursor:pointer;"><b>Room number?</b> Clich here if available.</h5>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GCRoomNumber)
        @Html.TextBoxFor(m => m.GCRoomNumber, new { @class = "form-control boxShadow" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GCAddressLine)
        @Html.TextBoxFor(m => m.GCAddressLine, new { @class = "form-control boxShadow" })
        @Html.ValidationMessageFor(m => m.GCAddressLine)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GCCity)
        @Html.TextBoxFor(m => m.GCCity, new { @class = "form-control boxShadow" })
        @Html.ValidationMessageFor(m => m.GCCity)
    </div>

    <div class="=form-group">
        @Html.LabelFor(m => m.GCState)
        @Html.DropDownListFor(x => x.GCState, Helper.StateDropdownData(Model.GCState), "Choose a State", new { @class = "form-control boxShadow" })
        @Html.ValidationMessageFor(m => m.GCState)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GCZipCode)
        @Html.TextBoxFor(m => m.GCZipCode, new { @class = "form-control boxShadow" })
        @Html.ValidationMessageFor(m => m.GCZipCode)
    </div>
</div><hr />