@{
    ViewBag.Title = "Live Order";
}
<div class="container-full titlepadding">
    <div class="container">
        <div class="row">
            <h1 style="color:#ffffff;" class="checkoutTitle">
                @ViewBag.bizname Live Order<br />
            </h1>
        </div>
        <div class="row">
            <div class="col-sm-4 col-md-4">
                <small style="font-size:14px;color:#ffffff;"> Connection start at: @ViewBag.contime </small><span class="badge" id="new-count"></span>
            </div>
            <div class="col-sm-3 col-md-3">
                @Ajax.ActionLink("Check missed orders", "GetMissedOrders", "LiveOrder", new { id = ViewBag.bizid, fromtime = DateTime.Now.ToString() }, new AjaxOptions
                        {
                            UpdateTargetId = "missedorder",
                            OnBegin = "onMissedBegin",
                            OnSuccess = "onMissedSuccess",
                            OnFailure = "onMissedFailed"
                        }, new { @class = "btn btn-primary" }) <span class="badge" id="missed-count"></span>
            </div>
            <div class="col-sm-5 col-md-5">
                @using (Ajax.BeginForm("GetOrderByNumber", "LiveOrder", FormMethod.Post, new AjaxOptions
    {
        UpdateTargetId = "order-num"
    }))
                {
                    @Html.TextBox("ordernum", "", new { @style = "color:#000000;font-size:14px;padding:4px;" })
                    <input type="submit" value="Order number" class="btn btn-primary" />

                }
            </div>
            </div>
        </div><br>
</div>
<input id="bizid" type="hidden" value="@ViewBag.bizid" />
<div class="container toppadding">
    <div id="order-num" style="background-color:azure;"></div>
    <div id="missedorder" style="background-color:#f6f6f6;"></div>
    <ul id="discussion"></ul>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <!--Reference the autogenerated SignalR hub script. -->
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        var newcount = 0;
        var missedcount = 0;
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chatHub;
            // Create a function that the hub can call back to display messages.Note: In JavaScript the reference to the server class and its members is in camel case.
            chat.client.sendNewOrder = function (bizname, orderid, message) {
                beep();
                // Add the message to the page.
                $('#discussion').append('<li class="liveorder"><span onclick="doslideupdown(this);" style="cursor:pointer;" ><b>' + bizname + '</b> &nbsp; &nbsp; </span><button class="btn btn-primary" onclick="doremove(this,' + orderid + ',0);">Done and Remove</button><div class="itemList">'
                    + message + '</div></li>'); //   + '</strong>: ' + message + '</li>');
                newcount++;
                $("#new-count").text(newcount);
            };
            $.connection.hub.start().done(function () {
                newcount = 0;
                $("#new-count").text(newcount);
                beep();
                var postData = '{"bizid":"' + $("#bizid").val() + '"}';
                $.ajax({
                    url: '/LiveOrder/MissedOrderCount',
                    type: 'POST',
                    data: postData,
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8',
                    success: function (xhr) {
                        missedcount = parseInt(xhr.result);
                        $("#missed-count").text(missedcount);
                    }
                });
            });
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
        function doslideupdown(item) {
            var thisTitle = $(item);
            var thisBody = thisTitle.next().next();
            thisBody.slideToggle('fast');
        }
        function doremove(item, id, flag) {
            var postData = '{"orderid":"' + id + '"}';
            $.ajax({
                url: '/LiveOrder/MarkOrderRemoved',
                type: 'POST',
                data: postData,
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                success: function (xhr) {
                    if (xhr.result == "success") {
                        $(item).parent().remove();
                    }
                    if (flag == 1) {
                        missedcount = missedcount - 1;
                        if (missedcount < 0)
                        {
                            missedcount = 0;
                        }
                        $("#missed-count").text(missedcount);
                    }
                    else if (flag == 0) {
                        newcount = newcount - 1;
                        if (newcount < 0) {
                            newcount = 0;
                        }
                        $("#new-count").text(newcount);
                    }
                }
            });
        }
        function beep() {
            var snd = new Audio("data:audio/wav;base64,");
            snd.play();
        }
    </script>
}






