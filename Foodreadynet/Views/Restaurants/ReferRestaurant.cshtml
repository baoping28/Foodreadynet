@model FoodReady.WebUI.Models.ReferRestaurantModel

@{
    ViewBag.Title = "ReferRestaurant";
}
<div class="container-full titlepadding">
    <div class="container">
        <div class="row">
            <h1 style="color:#ffffff;">
                Refer a Restaurant <small style="font-size:16px;color:#dddddd;">
                    If you have a favorite restaurant that is not in foodready.net,
                    Please fill out the form below and we will look into adding your favorite restaurant into our system.
                </small>
            </h1>
        </div>
    </div>
</div>
<div class="container toppadding boxShadow">
    <div class="row" style="padding-left:10px;padding-bottom:40px;">
        @ViewBag.result
        <div class="col-sm-1 col-md-1"></div>
        @using (Html.BeginForm())
        {
            <div class="col-sm-5 col-md-5">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(m => m.YourName)
                    @Html.TextBoxFor(m => m.YourName, new { @class = "form-control boxShadow" })
                    @Html.ValidationMessageFor(m => m.YourName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.YourEmail)
                    @Html.TextBoxFor(m => m.YourEmail, new { @class = "form-control boxShadow" })
                    @Html.ValidationMessageFor(m => m.YourEmail)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RestaurantName)
                    @Html.TextBoxFor(m => m.RestaurantName, new { @class = "form-control boxShadow" })
                    @Html.ValidationMessageFor(m => m.RestaurantName)
                </div>
            </div>
            <div class="col-sm-5 col-md-5">
                <div class="form-group">
                    @Html.LabelFor(m => m.RestaurantPhone)
                    @Html.TextBoxFor(m => m.RestaurantPhone, new { @class = "form-control boxShadow" })
                    @Html.ValidationMessageFor(m => m.RestaurantPhone)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RestaurantCity)
                    @Html.TextBoxFor(m => m.RestaurantCity, new { @class = "form-control boxShadow" })
                    @Html.ValidationMessageFor(m => m.RestaurantCity)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RestaurantState)
                    @Html.TextBoxFor(m => m.RestaurantState, new { @class = "form-control boxShadow" })
                    @Html.ValidationMessageFor(m => m.RestaurantState)
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-primary"><span class="glyphicon glyphicon-ok"></span> &nbsp; Sumit</button>
                </div>
            </div>
        }
    </div>
</div>
